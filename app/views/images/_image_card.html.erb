  <tr class='image-card'>
    <td><%= image_tag(image.url, class: 'index-image') %></td>
    <td>
      <%= link_to 'Show image', image_path(image) %>
    </td>
    <td>
      <ul class="tag-list">
        <% @view_model.image_tags(image).each_with_index do |tag, index| %>
          <li id="tag_<%= index %>">
            <%= link_to tag, images_path(tag: tag), id: "tag_link_#{tag}", class: 'image-tag' %>
          </li>
        <% end %>
      </ul>
    </td>
  </tr>
