<body>
  <h1>Image Library</h1>

  <%= render partial: "flash" %>

  <div>
    <%= link_to 'Go back to index', images_path, id: 'back_to_index' %>
  </div>

  <div>
    <%= link_to 'Delete Image', image_path(@image),	
            id: "delete_link",
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
  </div>

  <div id="image_tags">
    <h4>Tags</h4>
    <ul class="tag-list">
      <% @image.tag_list.each_with_index do |tag, index| %>
        <li id="line_item_<%= index %>" class='image-tag'><%= tag %></li>
      <% end %>
    </ul>
  </div>


  <%= image_tag(@image.url) %>
</body>
